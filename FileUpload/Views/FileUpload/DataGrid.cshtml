@model IEnumerable<FileUpload.Models.FileUploadModal>

@{
    ViewData["Title"] = "Uploaded Files";
    int serialNumber = 1;
}
<style>
    .DataGrid-Head {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 2rem;
        margin-top: 1rem;
    }

    .go-to-top-btn {
        position: fixed; /* Stays in a fixed position on the screen */
        bottom: 70px; /* Distance from the bottom */
        right: 50px; /* Distance from the right */
        z-index: 1000; /* Ensures it stays above other elements */
        padding: 10px 15px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 50px;
        font-size: 14px;
        cursor: pointer;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        opacity: 0; /* Initially hidden */
        visibility: hidden;
        transition: opacity 0.3s ease, visibility 0.3s ease;
    }

        .go-to-top-btn:hover {
            background-color: #0056b3;
            transform: scale(1.1); /* Slight zoom effect on hover */
        }

        .go-to-top-btn.visible {
            opacity: 1; /* Make the button visible */
            visibility: visible; /* Ensure it's interactable */
        }

    .search {
        display: inline-block;
        position: relative;
    }

        .search input[type="text"] {
            width: 250px;
            padding: 10px;
            border: 1px solid black;
            border-radius: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            outline: none; /* Remove the outline on focus */
        }

            .search input[type="text"]:focus {
                outline: none; /* Ensure no outline on focus */
            }

        .search button[type="submit"] {
            background-color: #0B5ED7;
            border: none;
            color: #fff;
            cursor: pointer;
            padding: 9.5px 20px;
            border-radius: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            position: absolute;
            top: 2.25px;
            right: 0;
        }

            .search button[type="submit"]:hover {
                color: rgb(255, 255, 255);
                background-color: blue;
            }



</style>



<div class="DataGrid-Head">
    <h2>Uploaded Files</h2>
    <div class="search">
        <input id="searchInput" placeholder="Search..." type="text">
        <button id="searchButton" type="submit">Go</button>
    </div>

    <a asp-action="Index" class="btn btn-primary">Back to File Upload</a>
</div>
<div class="Error">
    @ViewBag.Message
</div>
<div class="Success">
    @ViewBag.MessageSuccess
</div>
@if (!Model.Any())
{
    <div class="alert alert-info">
        No records found.
    </div>
}
else
{
    <div class="table-div">

        <table class="table table-striped table-bordered" id="fileTable">
            <thead>
                <tr>
                    <th>Serial Number</th>
                    <th>Thumbnail</th>
                    <th>File Name</th>
                    <th>File Size</th>
                    <th>Type</th>
                    <th>Uploaded On</th>
                    <th>
                        <div class="buttons">
                            Actions
                        </div>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var file in Model)
                {
                    <tr>
                        <td>@serialNumber</td>
                        <td style="max-width:7rem">

                            @if (file.Extention == ".xls" || file.Extention == ".xlsx")
                            {
                                <img src="/Images/Excel-logo.jfif" style="max-width:80%" />
                            }
                            else
                            {
                                <img src="/CompressedUploads/@file.Filename" style="max-width:100%" />
                            }
                        </td>
                        <td>@file.OriginalFilename</td>
                        <td>@file.FileSize KB</td>
                        <td>@file.FileType</td>
                        <td>@file.UploadedOn.ToString("g")</td>
                        <td>
                            <div class="buttons">
                                <a asp-action="Details" asp-route-id="@file.Id" class="btn btn-secondary">View Details</a>

                                <a asp-action="Download" asp-route-id="@file.Id" class="btn btn-info">Download</a>

                                <a href="javascript:void(0);" onclick="confirmDelete('@Url.Action("Delete", "FileUpload", new { id = file.Id })')" class="btn btn-danger">Delete</a>
                            </div>


                        </td>
                    </tr>
                    serialNumber++;
                }
            </tbody>
        </table>
    </div>
}
<button id="goToTopButton" class="go-to-top-btn">↑ Go to Top</button>
<script>
    // Get the button element
    const goToTopButton = document.getElementById('goToTopButton');

    // Show the button when the user scrolls down 100px
    window.addEventListener('scroll', () => {
        if (window.scrollY > 50) {
            goToTopButton.classList.add('visible');
        } else {
            goToTopButton.classList.remove('visible');
        }
    });

    // Scroll smoothly to the top when the button is clicked
    goToTopButton.addEventListener('click', () => {
        window.scrollTo({
            top: 0,
            behavior: 'smooth',
        });
    });

        // JavaScript to handle the search functionality
        document.getElementById("searchButton").addEventListener("click", function () {
            let input = document.getElementById("searchInput").value.toLowerCase();
            let rows = document.querySelectorAll("#fileTable tbody tr");

        rows.forEach(row => {
            // Get the file name cell (assuming it's the second column)
            let fileNameCell = row.getElementsByTagName("td")[2];

            if (fileNameCell && fileNameCell.textContent.toLowerCase().includes(input)) {
                row.style.display = ""; // Show the row if it matches
            } else {
                row.style.display = "none"; // Hide the row if it doesn't match
            }
        });
        });

        // Trigger the search automatically as the user types
        document.getElementById("searchInput").addEventListener("input", function () {
            let input = document.getElementById("searchInput").value.toLowerCase();
            let rows = document.querySelectorAll("#fileTable tbody tr");

            rows.forEach(row => {
                let cells = row.getElementsByTagName("td");
                let match = false;

                for (let i = 0; i < cells.length; i++) {
                    if (cells[i].textContent.toLowerCase().includes(input)) {
                        match = true;
                        break;
                    }
                }

                if (match) {
                    row.style.display = "";
                } else {
                    row.style.display = "none";
                }
            });
        });
</script>
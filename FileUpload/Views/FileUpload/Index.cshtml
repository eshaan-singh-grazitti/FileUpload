@model IEnumerable<FileUpload.Models.UploadedFileInfo>

@{
    ViewData["Title"] = "File Upload and List";
    var ModelList = Model.ToList();
}


<style>
    .form {
        margin: 1rem auto;
        background-color: #fff;
        border-radius: 10px;
        padding: 1rem .7rem .7rem .7rem;
        text-align: center;
        font-size: 1.125rem;
        max-width: 70vw;
    }

    .form-title {
        color: #000000;
        font-size: 1.8rem;
        font-weight: 500;
    }


    .drop-container {
        background-color: #fff;
        position: relative;
        display: flex;
        gap: 5px;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 2rem 1rem;
        margin: 2rem 0rem;
        border-radius: 10px;
        border: 2px dashed rgb(171, 202, 255);
        color: #444;
        cursor: pointer;
        transition: background .2s ease-in-out, border .2s ease-in-out;
    }

        .drop-container:hover {
            background: rgba(0, 140, 255, 0.164);
            border-color: rgba(17, 17, 17, 0.616);
        }

            .drop-container:hover .drop-title {
                color: #222;
            }

    .drop-title {
        color: #444;
        font-size: 20px;
        font-weight: bold;
        text-align: center;
        transition: color .2s ease-in-out;
        margin: 1rem 0rem;
    }

    .file-input {
        width: 350px;
        max-width: 100%;
        color: #444;
        padding: 2px;
        background: #fff;
        border-radius: 10px;
        border: 1px solid rgba(8, 8, 8, 0.288);
    }

        .file-input::file-selector-button {
            margin-right: 20px;
            border: none;
            background: #084cdf;
            padding: 10px 20px;
            border-radius: 10px;
            color: #fff;
            cursor: pointer;
            transition: background .2s ease-in-out;
        }

            .file-input::file-selector-button:hover {
                background: #0d45a5;
            }

    #uploadButton:disabled {
        pointer-events: auto;
        cursor: not-allowed;
    }



    #uploadButton {
        padding: 10px 20px;
        font-size: 16px;
        border: 1px solid #0d6efd;
        background-color: #0d6efd;
        cursor: pointer;
        border-radius: 5px;
        position: relative;
    }

        #uploadButton:hover {
            background-color: #0b5ed7;
            border-color: #0a58ca;
        }

        #uploadButton:disabled {
            background-color: #61A1FE;
            color: white;
            cursor: not-allowed;
            border: 1px solid white;
        }

    .tooltip-msg {
        visibility: hidden;
        position: absolute;
        bottom: 125%;
        left: 50%;
        transform: translateX(-50%);
        background-color: #222222;
        color: #fff;
        text-align: center;
        padding: 5px 10px;
        border-radius: 4px;
        font-size: 14px;
        white-space: nowrap;
        z-index: 1;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    #uploadButton:hover:disabled .tooltip-msg {
        visibility: visible;
        opacity: 1;
    }

    .Index_sMsg {
        border: 2px solid #D4EDDA;
        text-align: center;
        padding: 1.5rem 2rem;
        background-color: #D4EDDA;
        border-radius: 1rem;
        margin-bottom: 2rem;
        width: 50vw;
    }

    .Index_sMsg1 {
        border: 4px solid #f8d7da;
        text-align: center;
        padding: 1.5rem 2rem;
        background-color: #f8d7da;
        border-radius: 1rem;
        margin-bottom: 2rem;
        width: 50vw;
    }

    .row, .form-div {
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        background-color: #fff;
        width: 50vw;
    }

    body {
        background: radial-gradient(circle, #f0f4f8, #d9e6f2);
    }

    .main-div {
        height: 80vh;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        gap: 2rem;
    }

    #loader {
        text-align: center;
        color: #555;
        font-size: 16px;
        font-weight: bold;
    }

    .spinner-border {
        width: 3rem;
        height: 3rem;
        margin: auto;
        color: #007bff;
    }

</style>



<div class="main-div">
    <div class="row">
        <div class="form-div">
            <form asp-action="Upload" asp-controller="FileUpload" id="uploadForm" enctype="multipart/form-data"
                  method="post" class="form">
                <span class="form-title">Upload your file</span>

                <label for="fileInput" class="drop-container">
                    <span class="drop-title">Drop files here</span>
                    or
                    <input type="file" name="file" required id="fileInput" class="file-input" />
                </label>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group" style="text-align: center; margin-top: 50px;">
                    <button type="submit" id="uploadButton" class="btn btn-primary" disabled>
                        Upload
                        <span class="tooltip-msg">Select a file to upload</span>
                    </button>
                </div>
            </form>

            <!-- Loader -->
            <div id="loader" style="display: none; text-align: center; margin-top: 20px;">
                <div class="spinner-border" role="status">
                </div>
                <p>Uploading... Please wait.</p>
            </div>
        </div>



        <div class="alert alert-danger" style="display: none;" id="error-message"></div>
        <div class="alert alert-success" style="display: none;" id="success-message"></div>

    </div>
    @if (@ViewBag.MessageSuccess != null)
    {
        <div class="Success Index_sMsg" id="success1">
            @ViewBag.MessageSuccess
        </div>
    }
    @if (@ViewBag.Message != null)
    {
        <div class="Error Index_sMsg1"id="error1">
            @ViewBag.Message
        </div>
    }
</div>

<script>

    const fileInput = document.getElementById('fileInput');
    const uploadButton = document.getElementById('uploadButton');
        const uploadForm = document.getElementById("uploadForm");
            const loader = document.getElementById('loader');
            const msgSuccess = document.getElementById('success1');
            const msgError = document.getElementById('error1');



    fileInput.addEventListener('change', function() {
        if (fileInput.files.length > 0) {
            uploadButton.disabled = false;
        } else {
            uploadButton.disabled = true;
        }
    });
        uploadForm.addEventListener("submit", () => {
        // Use session storage to indicate successful submission
        sessionStorage.setItem("formSubmitted", "true");
                loader.style.display = 'block';

    });

    // Check if form was recently submitted
    window.addEventListener("DOMContentLoaded", () => {
        if (sessionStorage.getItem("formSubmitted") === "true") {
            fileInput.value = null;
            sessionStorage.removeItem("formSubmitted");
            setTimeout(()=>{
            // window.location.replace(window.location.href);
            // location.reload(true);
            // location.href = location.href;
            msgSuccess.style.display = "none";
            msgError.style.display = "none";
            },2000);

        }
    });



</script> 
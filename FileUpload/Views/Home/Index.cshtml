@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    @if (User.Identity.IsAuthenticated)
    {
        <h1 class="display-4">Welcome Back to the File Uploader</h1>
        <p>You are ready to explore the File Uploader!</p>
        <a asp-action="Index" asp-controller="FileUpload" class="btn btn-success">Go to File Uploader</a>
    }
    else
    {
        <h1 class="display-4">Welcome to the File Uploader</h1>
        <p>Please Register or Login to start uploading files!</p>
        <a asp-action="Login" asp-controller="Account" class="btn btn-primary">Login</a>
        <a asp-action="Register" asp-controller="Account" class="btn btn-primary">Register</a>
    }
</div>
